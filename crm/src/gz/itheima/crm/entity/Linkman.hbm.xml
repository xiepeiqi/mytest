<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="gz.itheima.crm.entity.Linkman" table="cst_linkman" catalog="itheimacrm">
        <id name="lkmId" type="java.lang.Long">
            <column name="lkm_id" />
            <generator class="native"></generator>
        </id>
        <!-- 
        	延迟加载问题：
        	1）关闭延迟加载:lazy="false"，不可取
			2）把session关闭的范围扩大
         -->
        <many-to-one name="customer" class="gz.itheima.crm.entity.Customer" fetch="select" >
            <column name="lkm_cust_id" not-null="true">
                <comment>客户id</comment>
            </column>
        </many-to-one>
        <property name="lkmName" type="java.lang.String">
            <column name="lkm_name" length="16">
                <comment>联系人姓名</comment>
            </column>
        </property>
        <property name="lkmGender" type="java.lang.String">
            <column name="lkm_gender" length="1">
                <comment>联系人性别</comment>
            </column>
        </property>
        <property name="lkmPhone" type="java.lang.String">
            <column name="lkm_phone" length="16">
                <comment>联系人办公电话</comment>
            </column>
        </property>
        <property name="lkmMobile" type="java.lang.String">
            <column name="lkm_mobile" length="16">
                <comment>联系人手机</comment>
            </column>
        </property>
        <property name="lkmEmail" type="java.lang.String">
            <column name="lkm_email" length="64">
                <comment>联系人邮箱</comment>
            </column>
        </property>
        <property name="lkmQq" type="java.lang.String">
            <column name="lkm_qq" length="16">
                <comment>联系人qq</comment>
            </column>
        </property>
        <property name="lkmPosition" type="java.lang.String">
            <column name="lkm_position" length="16">
                <comment>联系人职位</comment>
            </column>
        </property>
        <property name="lkmMemo" type="java.lang.String">
            <column name="lkm_memo" length="512">
                <comment>联系人备注</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
